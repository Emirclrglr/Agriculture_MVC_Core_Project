@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "UpdateAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Adres Kaydı Güncelle</h4>
                  <form method="post" class="forms-sample">
                    @Html.HiddenFor(x=>x.Id)
                    <div class="form-group">
                        @Html.Label("Açık Adres")
                        @Html.TextBoxFor(x=>x.Desc1, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Şehir/Ülke")
                        @Html.TextBoxFor(x=>x.Desc2, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Posta Kodu")
                        @Html.TextBoxFor(x=>x.Desc3, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Telefon no")
                        @Html.TextBoxFor(x=>x.Desc4, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Harita Görünüm")
                        @Html.TextBoxFor(x=>x.Mapinfo, new {@class = "form-control"})
                    </div>
                    <button class="btn btn-outline-success me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>
