@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center">Admin Listesi</h1>
            <table class="table table-bordered border-2">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <td align="center">Sil</td>
                        <td align="center">Güncelle</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count != 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td align="center"><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-outline-danger">Sil</a></td>
                                <td align="center"><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="alert alert-danger text-center" role="alert">
                                Admin Kaydı Bulunamamıştır!
                                <a href="/Admin/AddAdmin/" class="alert-link">Lütfen Yeni Bir Admin Girişi Yapınız!</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/AddAdmin/" class="btn btn-outline-info">Yeni Admin Kaydı</a>
        </div>
    </div>
</div>

