@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

      <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Duyuru Kaydı</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label for="exampleInputName1">Duyuru Başlık</label>
                      <input type="text" class="form-control" asp-for="Title" id="inptitle">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Açıklama</label>
                      <textarea type="text" class="form-control" asp-for="Description" id="intdesc" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
                  </form>
                </div>
              </div>
            </div>


