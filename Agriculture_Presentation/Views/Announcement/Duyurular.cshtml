@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h1 class="card-title text-center">Duyurular</h1>
                    <table class="table table-bordered border-2">
                      <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <td align="center">Sil</td>
                            <td align="center">Güncelle</td>
                            <td align="center">Durum</td>
                        </tr>
                      </thead>
                      <tbody>
                        @if (Model.Count != 0)
                        {
                                 @foreach (var item in Model)
                                {
                                        <tr>
                                          <td>@item.Title</td>
                                          <td>@item.Date.ToShortDateString()</td>
                                          <td align="center"><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                                          <td align="center"><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-primary">Güncelle</a></td>
                                                @if (item.Status == true)
                                                {
                                                    <td align="center"><a href="/Announcement/AnnouncementStatusToFalse/@item.AnnouncementId" class="btn btn-outline-danger">Pasif Yap</a></td>

                                                }
                                                else
                                                {
                                                    <td align="center"><a href="/Announcement/AnnouncementStatusToTrue/@item.AnnouncementId" class="btn btn-outline-success">Aktif Yap</a></td>

                                                }
                                        </tr>
                                }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="alert alert-danger text-center" role="alert"> Duyuru Kaydı Bulunamamıştır!
                                    <a href="/Announcement/AddAnnouncement/" class="alert-link">Lütfen Yeni Bir Duyuru Girişi Yapınız!</a>
                                </td>
                            </tr>
                        }
                 </tbody>
                    </table>
                    <br />
                    <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Kaydı</a>
                </div>
              </div>
            </div>

