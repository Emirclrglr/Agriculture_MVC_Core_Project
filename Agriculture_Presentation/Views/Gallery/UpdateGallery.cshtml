@model EntityLayer.Concrete.Gallery
@{
    ViewData["Title"] = "UpdateGallery";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


      <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Galeri Güncelle</h4>
                  <form method="post" class="forms-sample">
                    <input type="hidden" asp-asp-for="Id" />
                    <div class="form-group">
                      <label asp-for="Title">Başlık<sup class="text-danger">*</sup></label>
                      <input type="text" class="form-control" asp-for="Title">
                      <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">Açıklama<sup class="text-danger">*</sup></label>
                      <textarea type="text" class="form-control" asp-for="Description" rows="4"></textarea>
                      <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="ImageUrl">Görsel Yolu<sup class="text-danger">*</sup></label>
                      <input type="text" class="form-control" asp-for="ImageUrl">
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
                  </form>
                </div>
              </div>
            </div>
