@model Agriculture_Presentation.Models.UserUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hesap Ayarları</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi<sup class="text-danger">*</sup></label>
                    <input type="email" class="form-control" asp-for="Mail" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Telefon Numarası<sup class="text-danger">*</sup></label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre<sup class="text-danger">*</sup></label>
                    <input type="text" class="form-control" asp-for="Password" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre Tekrar<sup class="text-danger">*</sup></label>
                    <input type="text" class="form-control" asp-for="ConfirmPassword" required>
                </div>

                <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

