
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Excel Raporları</title>
    <style>
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .form-group {
            margin-right: 10px; /* İhtiyaca göre ayarlayabilirsiniz */
            margin-bottom: 10px; /* Alt alta gelme ihtimaline karşı */
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            border: 1px solid transparent;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn.btn-outline-info {
                border-color: #17a2b8;
                color: #17a2b8;
            }

                .btn.btn-outline-info:hover {
                    background-color: #17a2b8;
                    color: #fff;
                }

            .btn.btn-outline-primary {
                border-color: #007bff;
                color: #007bff;
            }

                .btn.btn-outline-primary:hover {
                    background-color: #007bff;
                    color: #fff;
                }

            .btn.btn-outline-success {
                border-color: #28a745;
                color: #28a745;
            }

                .btn.btn-outline-success:hover {
                    background-color: #28a745;
                    color: #fff;
                }
    </style>
</head>
<body>
    <h1>Excel Raporları</h1>
    <div class="row">
        <div class="form-group">
            <a href="/Report/StaticReport/" class="btn btn-outline-info">Statik Rapor</a>
        </div>

        <div class="form-group">
            <a href="/Report/MessageReport/" class="btn btn-outline-primary">Mesaj Raporu</a>
        </div>

        <div class="form-group">
            <a href="/Report/AnnouncementReport/" class="btn btn-outline-success">Duyuru Raporları</a>
        </div>
    </div>
</body>
</html>