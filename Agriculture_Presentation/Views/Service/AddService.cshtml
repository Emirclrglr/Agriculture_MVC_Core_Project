@model Agriculture_Presentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Hizmet Kaydı</h4>
                  <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label for="exampleInputName1">Hizmet Adı</label>
                      <input type="text" class="form-control" asp-for="Title" id="inptitle" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Açıklama</label>
                      <textarea type="text" class="form-control" asp-for="Description" id="intdesc" placeholder="Açıklama" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword4">Görsel Yolu</label>
                      <input type="text" class="form-control" asp-for="ImageUrl" id="inpimage" placeholder="Görsel Yolu">
                    </div>
                    <button type="submit" class="btn btn-outline-primary me-2">Ekle</button>
                  </form>
                </div>
              </div>
            </div>

            


