@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Hizmet Kaydı Güncelle</h4>
                  <form method="post" class="forms-sample">
                    @Html.HiddenFor(x=>x.ServiceId)
                    <div class="form-group">
                        @Html.Label("Hizmet Adı")
                        @Html.TextBoxFor(x=>x.ServiceTitle, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Açıklama")
                        @Html.TextAreaFor(x=>x.ServiceDescription,4,10, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Görsel Yolu")
                        @Html.TextBoxFor(x=>x.ClientImage, new {@class = "form-control"})
                    </div>
                    <button class="btn btn-outline-success me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>

