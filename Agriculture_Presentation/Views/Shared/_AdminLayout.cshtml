<!DOCTYPE html>
<html lang="en">

    @*Partial Head*@
    @await Html.PartialAsync("/Views/AdminPartials/PartialHead.cshtml")

<body>
  <div class="container-scroller">
    @*Partial Navbar*@
    @await Component.InvokeAsync("_AdminNavbar")

    <div class="container-fluid page-body-wrapper">
      @*Partial Sidebar*@
      @await Html.PartialAsync("/Views/AdminPartials/PartialSidebar.cshtml")

      @*Content*@
      <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                @RenderBody()
            </div>
        </div>

        @*Partial Footer*@
        @await Html.PartialAsync("/Views/AdminPartials/PartialFooter.cshtml")

      </div>
    </div>
  </div>
        @*Partial Scripts*@
    @await Html.PartialAsync("/Views/AdminPartials/PartialScript.cshtml")
</body>

</html>


