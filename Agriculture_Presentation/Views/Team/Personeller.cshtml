@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h1 class="card-title text-center">Personeller</h1>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Fotoğraf</th>
                          <th>Personel Adı</th>
                          <th>Unvan</th>
                          <th>Sil</th>
                          <th>Güncelle</th>
                        </tr>
                      </thead>
                      <tbody>
                        @if (Model.Count != 0)
                        {
                            @foreach (var item in Model)
                            {
                            <tr>
                              <td class="py-1">
                                <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image"/>
                              </td>
                              <td>@item.PersonName</td>
                              <td>@item.PersonTitle</td>
                              <td><a href="/Team/DeletePerson/@item.PersonId" class="btn btn-outline-danger">Sil</a></td>
                              <td><a href="/Team/UpdatePerson/@item.PersonId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="alert alert-danger text-center" role="alert"> Personel Kaydı Bulunamamıştır!
                                    <a href="/Team/AddPerson/" class="alert-link">Lütfen Yeni Bir Personel Girişi Yapınız!</a>
                                </td>
                            </tr>
                        }

                      </tbody>
                    </table>
                    <br />
                    <a href="/Team/AddPerson/" class="btn btn-outline-info">Yeni Personel Ekle</a>
                  </div>
                </div>
              </div>
            </div>


